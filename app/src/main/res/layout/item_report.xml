<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"

            android:orientation="vertical" >

            <TextView
                android:id="@+id/repporttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="25sp"
                android:text="关于"
                android:textColor="#a4a4a3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="25sp"
                    android:text="请假类型："
                    android:textColor="#a4a4a3" />

                <TextView
                    android:id="@+id/reporttypet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="病假"
                    android:textSize="25sp"
                    android:textColor="#3d3d3d" />
                
                    
                <TextView
                android:id="@+id/reportEntryTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:paddingLeft="50dp"
                android:text="2016-4-46"
                android:textColor="#a4a4a3"
                android:textSize="20sp" />
               
            </LinearLayout>

             <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="25sp"
                    android:text="请假原由："
                    android:textColor="#a4a4a3" />

                <TextView
                    android:id="@+id/reportcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="生病了，好辛苦"
                    android:textColor="#3d3d3d" />
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="25sp"
                    android:text="审批结果："
                    android:textColor="#a4a4a3" />

                <TextView
                    android:id="@+id/reportresult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:text="等待审批"
                    android:textColor="#3d3d3d" />
            </LinearLayout>

            <TextView
                android:id="@+id/rAnswerTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:text="2016-4-46"
                android:textColor="#a4a4a3"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>